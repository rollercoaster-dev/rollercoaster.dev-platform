{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch index.ts",
    "dev:full": "docker compose up -d postgres && sleep 2 && bun run db:setup && bun run dev",
    "db:generate": "bunx drizzle-kit generate:pg",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:studio": "bunx drizzle-kit studio",
    "db:setup": "bun run db:generate && bun run db:migrate"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "axios": "^1.8.2",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.2",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0"
  }
}
